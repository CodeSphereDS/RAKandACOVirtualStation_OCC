<catel:Page x:Class="RAKandACOVirtualStation_OCC.Views.SignOut"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			    xmlns:catel="http://catel.codeplex.com"
            HorizontalAlignment="Left" VerticalAlignment="Top"
            >
    
    <!-- Resources -->
    <Page.Resources>

    </Page.Resources>

    <!-- Content -->
  <Border BorderBrush="LightSteelBlue" BorderThickness="1">
    <catel:StackGrid Style="{StaticResource ContentRoot}">
    <catel:StackGrid.ColumnDefinitions>
      <ColumnDefinition Width="auto"/>
    </catel:StackGrid.ColumnDefinitions>
    <catel:StackGrid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
    </catel:StackGrid.RowDefinitions>
    <TextBlock Text="Disconnect session?"/>
    <catel:EmptyRow Height="20"/>
    <WrapPanel FlowDirection="LeftToRight" HorizontalAlignment="Right">
    <Button Content="Yes" Margin="10" Background="Transparent" Width="55" Command="{Binding CommandSignOut}"/>
      <Button Content="No" Margin="10" Background="Transparent" Width="55"/>
    </WrapPanel>
  </catel:StackGrid>
  </Border>
</catel:Page>
